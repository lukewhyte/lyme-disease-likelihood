<lyme-radial-chart counties="{topCounties}" 
				   height="{height}" 
				   viz-loaded="{vizLoaded}"
				   curr-county-id="{currCountyId}"></lyme-radial-chart>
{{#if vizLoaded}}
	<div class="arrow-down"></div>
	<h2><span>{{totalCases}}</span> cases of Lyme Disease in 2014 nationwide</h2>
	<lyme-area-chart curr-county="{nationwide}" height="{areaChartHeight}" label="{areaChartLabel}"></lyme-area-chart>
{{/if}}